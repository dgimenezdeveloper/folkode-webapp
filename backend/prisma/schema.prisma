// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH.JS MODELS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(VIEWER)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

// ==================== BUSINESS MODELS ====================

model Project {
  id          String         @id @default(cuid())
  title       String
  slug        String         @unique
  description String
  shortDesc   String?
  category    ProjectCategory
  status      ProjectStatus  @default(IN_DEVELOPMENT)
  featured    Boolean        @default(false)
  demoUrl     String?
  liveUrl     String?
  githubUrl   String?
  technologies String         @default("[]") // JSON array stored as string
  images      ProjectImage[]
  sections    ProjectSection[]
  client      Client?        @relation(fields: [clientId], references: [id])
  clientId    String?
  transactions Transaction[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  createdAt DateTime @default(now())
}

model ProjectSection {
  id          String              @id @default(cuid())
  key         String
  title       String
  description String
  order       Int                 @default(0)
  images      String              @default("[]") // JSON array stored as string
  subsections ProjectSubsection[]
  project     Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  createdAt   DateTime            @default(now())
}

model ProjectSubsection {
  id          String         @id @default(cuid())
  key         String
  title       String
  description String
  images      String         @default("[]") // JSON array stored as string
  order       Int            @default(0)
  section     ProjectSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId   String
  createdAt   DateTime       @default(now())
}

enum ProjectCategory {
  ECOMMERCE
  LANDING_PAGE
  CORPORATIVO
  MULTIMEDIA
  WEB
  SOFTWARE
}

enum ProjectStatus {
  IN_DEVELOPMENT
  COMPLETED
  MAINTENANCE
  PAUSED
}

model Client {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  company      String?
  website      String?
  avatar       String?
  notes        String?
  projects     Project[]
  transactions Transaction[]
  testimonials Testimonial[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  amount      Float
  description String
  date        DateTime        @default(now())
  category    String?
  project     Project?        @relation(fields: [projectId], references: [id])
  projectId   String?
  client      Client?         @relation(fields: [clientId], references: [id])
  clientId    String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Testimonial {
  id        String   @id @default(cuid())
  content   String
  rating    Int      @default(5)
  featured  Boolean  @default(false)
  client    Client   @relation(fields: [clientId], references: [id])
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  message   String
  status    MessageStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum MessageStatus {
  PENDING
  READ
  REPLIED
  ARCHIVED
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  role      String
  bio       String?
  image     String?
  order     Int      @default(0)
  github    String?
  linkedin  String?
  twitter   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
